<body>
  <h1>Product Search</h1>
  
  <form action="/search" method="post">
    <label for="productId">Enter Product ID:</label>
    <input type="text" id="productId" name="productId" required>
 
    <button type="submit">Search</button>
  </form>
  <br>
  <br>
  
  <form action="/allProducts" method="post">
    <button type="submit">Get All Products</button>
  </form>

  <h2>Add Product</h2>
  <button onclick="toggleForm()">Add Product</button>
  <form action="/addProduct" method="post" id="productForm" style="display: none;">

    <label for="productId">ProductId:</label>
    <input type="text" id="productId" name="productId" required>
    <br>
    <br>




    <label for="productName">Product Name:</label>
    <input type="text" id="productName" name="productName" required>
    <br>
    <br>

    <label for="productDescription">product Description:</label>
    <input type="text" id="productDescription" name="productDescription" required>
    <br>
    <br>


    <label for="productPrice">Product Price:</label>
    <input type="text" id="productPrice" name="productPrice" required>
    <br>
    <br>


    <label for="productQuantity">product Quantity:</label>
    <input type="text" id="productQuantity" name="productQuantity" required>
    <br>
    <br>


    <label for="categoryId">categoryId:</label>
    <input type="text" id="categoryId" name="categoryId" required>
    <br>
    <br>


    <label for="suppliersId">suppliersId:</label>
    <input type="text" id="suppliersId" name="suppliersId" required>

    <button type="submit">Add Product</button>
  </form>


  <h2>Edit Product</h2>
  <button onclick="toggle()">Edit  Product</button>
  <form action="/editProduct" method="post" id="editproduct" style="display: none;">

    <label for="productId">ProductId:</label>
    <input type="text" id="productId" name="productId" required>
    <br>
    <br>




    <label for="productName">Product Name:</label>
    <input type="text" id="productName" name="productName" required>
    <br>
    <br>

    <label for="productDescription">product Description:</label>
    <input type="text" id="productDescription" name="productDescription" required>
    <br>
    <br>


    <label for="productPrice">Product Price:</label>
    <input type="text" id="productPrice" name="productPrice" required>
    <br>
    <br>


    <label for="productQuantity">product Quantity:</label>
    <input type="text" id="productQuantity" name="productQuantity" required>
    <br>
    <br>


    <label for="categoryId">categoryId:</label>
    <input type="text" id="categoryId" name="categoryId" required>
    <br>
    <br>


    <label for="suppliersId">suppliersId:</label>
    <input type="text" id="suppliersId" name="suppliersId" required>

    <button type="submit">edit Product</button>
  </form>


  <h2>Search Results</h2>
  
  <% if (products.length > 0) { %>
    <ul>
      <% products.forEach(product => { %>
        <li><strong>Product ID:</strong> <%= product.pid %>, <strong>Name:</strong> <%= product.pname %>, <strong>Product Description:</strong> <%= product.pdesc %> , <strong>Product price:</strong> <%= product.price %>, <strong>Product quantity:</strong> <%= product.quantity %>,<strong>Supplier ID:</strong> <%= product.suppliersId %>,<strong>Category ID:</strong> <%= product.categoryId %></li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>No products found for the specified Product ID.</p>
  <% } %>
</body>
<script>
  function toggleForm() {
    const productForm = document.getElementById('productForm');
    productForm.style.display = productForm.style.display === 'none' ? 'block' : 'none';
  }

  function toggle() {
    const productForm = document.getElementById('editproduct');
    productForm.style.display = productForm.style.display === 'none' ? 'block' : 'none';
  }
</script>
