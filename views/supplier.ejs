    <h1>Supplier Details</h1>

  
  <form action="/allsuppliers" method="post">
    <button type="submit">Get All Suppliers</button>
  </form>



    <h2>Search Results</h2>
  
  <% if (suppliers.length > 0) { %>
    <ul>
      <% suppliers.forEach(supplier => { %>
        <li><strong>suppliers ID:</strong> <%= supplier.suppliersId %>, <strong>Name:</strong> <%= supplier.sname %>, <strong>Address</strong> <%= supplier.saddress %> </li>
      <% }); %>

    </ul>

    <div id="content" style="display: none;">
        <% if (products.length > 0) { %>
            <ul>
              <% products.forEach(product => { %>
                <li><strong>Product ID:</strong> <%= product.pid %>, <strong>Name:</strong> <%= product.pname %>, <strong>Product Description:</strong> <%= product.pdesc %> , <strong>Product price:</strong> <%= product.price %></li>
              <% }); %>
            </ul>
          <% } %>
      </div>


  <% } else { %>
    <p>No suppliers found for the specified supplier ID.</p>
  <% } %>




  <% if (suppliers.length ==1 ) { %>
  
  <button onclick="displayContent()">Show products supplied</button>
  <% }  %>
  <script>
    function displayContent() {
      const contentDiv = document.getElementById('content');
      contentDiv.style.display = 'block';
    }
  </script>

